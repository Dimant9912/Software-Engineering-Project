<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Νέα Προπόνηση"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/etAthleteEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Αθλητή (π.χ. athlete@test.com)"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etTrainingDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ημερομηνία (YYYY-MM-DD)"
        android:inputType="date"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etTrainingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ώρα Προπόνησης (π.χ. 18:30)"
        android:inputType="time"
        android:minHeight="48dp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnSaveTraining"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Αποθήκευση Προπόνησης"/>

    <Button
        android:id="@+id/btnBackFromCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Επιστροφή"
        android:backgroundTint="#9E9E9E"/>

</LinearLayout>
