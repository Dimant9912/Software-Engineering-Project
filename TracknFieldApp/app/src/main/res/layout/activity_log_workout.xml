<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#E3F2FD">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Καταγραφή Νέας Προπόνησης"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="#1976D2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Επίλεξε Ημερομηνία (YYYY-MM-DD):"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etWorkoutDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="π.χ. 2024-05-15"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnNextStep"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ΕΠΟΜΕΝΟ: ΠΡΟΣΘΗΚΗ ΑΣΚΗΣΕΩΝ"
        android:backgroundTint="#2196F3"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnLogBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ΠΙΣΩ"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#666666"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Σημείωση: Η προπόνηση θα αποθηκευτεί στο προσωπικό σας πρόγραμμα."
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="#666666"/>

</LinearLayout>
