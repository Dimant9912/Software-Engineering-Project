<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Προσθήκη Προπόνησης"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Επίλεξε Ημερομηνία:"
        android:textSize="16sp"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etSessionDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="YYYY-MM-DD (π.χ. 2025-01-10)"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnAddSession"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ΕΠΟΜΕΝΟ: ΠΡΟΣΘΗΚΗ ΑΣΚΗΣΕΩΝ"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnAddSessionBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ΠΙΣΩ"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#666666"/>

</LinearLayout>
