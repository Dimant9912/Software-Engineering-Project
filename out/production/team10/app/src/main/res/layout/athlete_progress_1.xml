<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F1F8E9">

    <TextView
        android:id="@+id/tvProgressDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ημερομηνία: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textColor="#2E7D32"/>

    <TextView
        android:id="@+id/tvProgressResults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Φόρτωση..."
        android:textSize="18sp"
        android:textColor="#333333"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnAction"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ΕΝΕΡΓΕΙΑ"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#4CAF50"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ΔΙΑΓΡΑΦΗ ΠΡΟΠΟΝΗΣΗΣ"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#F44336"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnBackToCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ΠΙΣΩ ΣΤΟ ΗΜΕΡΟΛΟΓΙΟ"
        style="@style/Widget.AppCompat.Button.Borderless"/>

</LinearLayout>
