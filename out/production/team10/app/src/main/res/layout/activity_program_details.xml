<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvProgramTitleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Όνομα Προγράμματος"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvProgramDatesDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/2025 - 01/02/2025"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Προπονήσεις (Sessions):"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <ListView
        android:id="@+id/lvSessions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F0F0F0"/>

    <Button
        android:id="@+id/btnAddSessionToSpecific"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Προσθηκη Νεας Προπονησης"
        android:layout_marginTop="16dp"/>

</LinearLayout>