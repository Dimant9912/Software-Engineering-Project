<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#E8F5E9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Εγγραφή Αθλητή"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"
                android:textColor="#2E7D32"/>

            <EditText
                android:id="@+id/etAthleteRegEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Το Email σας"
                android:inputType="text"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etAthleteRegPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Κωδικός Πρόσβασης"
                android:inputType="text"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etAthleteRegFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Όνομα"
                android:inputType="text"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etAthleteRegLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Επώνυμο"
                android:inputType="text"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A5D6A7"
                android:layout_marginVertical="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Στοιχεία Πρόσκλησης:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etAthleteRegTrainerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Προπονητή"
                android:inputType="text"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etAthleteRegInviteCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Κωδικός Πρόσκλησης"
                android:inputType="text"
                android:minHeight="48dp"
                android:layout_marginBottom="32dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnAthleteRegConfirm"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ΟΛΟΚΛΗΡΩΣΗ ΕΓΓΡΑΦΗΣ"
                android:backgroundTint="#4CAF50"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnAthleteRegBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ΠΙΣΩ"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="16dp"/>

</LinearLayout>
